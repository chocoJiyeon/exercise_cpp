#include<bits/stdc++.h>
using namespace std;

int main()
{
	int i;
	string s;
	cin>>s;
	
	for(i=0; i<s.length()/2; i++)
	{
		if(s[i] != s[s.length()-i-1])
		{
			cout<<'0'<<'\n';
			break;
		}
		
	}
	if(i == s.length()/2) cout<<'1'<<'\n';
	return 0;
}

/////////////////////////////////////

#include<bits/stdc++.h>
using namespace std;

int main()
{
	string s,rev;
	cin>>s;
	
	rev = s;
	reverse(rev.begin(),rev.end());
	if(rev == s) cout<<"1\n";
	else cout<<"0\n";
	
	return 0;
}
